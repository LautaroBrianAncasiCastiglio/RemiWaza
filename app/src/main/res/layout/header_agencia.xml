<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:background="@color/primaryFondo"
    android:paddingStart="10dp"
    android:gravity="center_vertical">

    <!-- Bot贸n de retroceso -->
    <LinearLayout
        android:id="@+id/btnInicio"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center">

        <ImageView
            android:layout_width="120dp"
            android:layout_height="80dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/remi_removebg_preview"
            android:contentDescription="Imagen de retroceso" />

    </LinearLayout>

    <!-- Bot贸n de Edificio -->
    <LinearLayout
        android:id="@+id/btnCarro"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingStart= "15dp"
        android:paddingEnd="10dp">

        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/auto"
            android:contentDescription="Icono de edificio"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Carro"
            android:textColor="@android:color/white"
            android:textSize="20sp" />
    </LinearLayout>

    <!-- Bot贸n de Edificio -->
    <LinearLayout
        android:id="@+id/btnCountAgenci"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingStart= "15dp"
        android:paddingEnd="10dp">

        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/edificio_de_oficinas"
            android:contentDescription="Icono de edificio"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cuenta"
            android:textColor="@android:color/white"
            android:textSize="20sp" />
    </LinearLayout>

    <!-- Bot贸n de Usuario -->
    <LinearLayout
        android:id="@+id/btnEmpleados"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingStart= "10dp"
        android:paddingEnd="5dp">

        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/usuario"
            android:contentDescription="Icono de usuario" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Empleado"
            android:textColor="@android:color/white"
            android:textSize="20sp" />
    </LinearLayout>



</LinearLayout>
